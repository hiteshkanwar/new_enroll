<table class="table table-hover table-striped" id="doc_table">
  <col width="120">
  <col width="150">
  <col width="130">
  <col width="100">
  <col width="130">
  <tr>
    <th>Member</th>
    <th>Type</th>
    <th>Date verified</th>
    <th>Download</th>
    <th>Document status</th>
  </tr>
  <tr>
    <td><%= member.person.first_name %> <%= member.person.last_name%></td>
    <td colspan="4">
      <table class="table table-condensed">
        <col width="160">
        <col width="160">
        <col width="130">
        <col width="120">
        <% member.person.consumer_role.vlp_documents.each do |doc| %>
            <tr>
              <td><%= doc.subject %></td>
              <td><%= doc.updated_at.strftime("%d, %b, %Y") %><br></td>
              <td style="padding-left: 40px;">
                <% if doc.identifier.present? %>
                    <% key = doc.identifier.split('#').last %>
                    <%= link_to("/insured/verification_documents/download/#{key}", class: "download") do %>
                        <i class="fa fa-download fa-2x"></i>
                    <% end %>
                <% end %>
              </td>

              <td><%= doc.status %><br></td>
            </tr>
        <% end %>
      </table>
    </td>
  </tr>
</table>